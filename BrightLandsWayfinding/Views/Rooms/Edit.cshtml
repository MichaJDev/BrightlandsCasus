@model BrightLandsWayfinding.Models.Rooms.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoryID" class="control-label"></label>
                <select asp-for="StoryID" class="form-control" asp-items="ViewBag.StoryID"></select>
                <span asp-validation-for="StoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="0">Office</option>
                    <option value="1">Hall</option>
                    <option value="2">Entrance</option>
                    <option value="3">Exit</option>
                    <option value="4">Staircase</option>
                    <option value="5">Work Room</option>
                    <option value="6">Cafetaria</option>
                    <option value="7">Storage</option>
                    <option value="8">Elevator</option>
                    <option value="9">Parking Lot</option>
                </select>

                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
