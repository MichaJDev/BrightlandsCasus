@using BrightLandsWayfinding.Models.Buildings
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if(ViewBag.Buildings != null){
        <div class="card">
            <h2 class="card-header">Map</h2>
            <div class="card-body">               
                <img src="~/assets/img/verygoodpic.png" style="height:auto; width:100%;"/>
            </div>
        </div>
    }else{
        <div class="row">
            <div class="col"></div> 
                <div class="col"><div class="card" style="width: 850px;">
                    <h2 class="card-header">Create a new Building!</h2>
                    <div class="card -body">
                        <br />
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-8"><a asp-controller="Buildings" asp-action="Create" class="btn btn-primary">Create New Building</a></div>
                            <div class="col-2"></div>
                        </div>
                        <br />
                        <br />
                        <br />
                    </div>
                </div>
            </div> 
            <div class="col"></div> 
            
        </div>
    }
</div>
