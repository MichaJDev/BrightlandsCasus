@using BrightLandsWayfinding.Models.Steps
@model BrightLandsWayfinding.Models.MapRoutes.MapRoute

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>MapRoute</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartLocation.ID) @Html.DisplayFor(model => model.StartLocation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndLocation.ID) @Html.DisplayFor(model => model.EndLocation.Name)
        </dd>
    </dl>
</div>
<div class="card">
    <h3 class="card-header">Stories</h3>
    <div  class="card-body">
        <a asp-action="Create" asp-controller="Steps" class="btn btn-primary">Create New Steps..</a>
        <br />
        <br />
        @{
            if (ViewBag.Steps != null)
            {
                foreach (Step s in Model.Steps)
                {
                    <div class="row">
                                    <div class="col-6">
                                        <a asp-controller="Stories" asp-action="Details" asp-route-id="@s.ID">@s.Description</a> 
                                    </div>
                                    <div class="col-4">
                                        <a asp-controller="Stories" asp-action="Edit" asp-route-id="@s.ID">Edit</a>  |
                                        <a asp-controller="Stories" asp-action="Delete" asp-route-id="@s.ID">Delete</a> 
                                    </div>
                    </div> 

                }
            }
        }  
    </div>  
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
