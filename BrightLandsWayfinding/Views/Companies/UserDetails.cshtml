@using BrightLandsWayfinding.Models.Users
@model BrightLandsWayfinding.Models.Companies.Company

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfileImage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfileImage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelephoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WebsiteURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WebsiteURL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Rooms" asp-action="UserDetails" asp-route-id="@Model.RoomID"> @Html.DisplayFor(model => model.Room.Name)</a>
        </dd>
    </dl>
</div>
<div class="card">
    <h3 class="card-header">Employees</h3>
    <div class=card-body>
        @{
            if (ViewBag.Users != null)
            {
                foreach (User u in ViewBag.Users)
                {
                    if (u.CompanyID == Model.ID)
                    {
                                    <div class="row">
                                        <div class="col-8"><a asp-action="UserDetails" asp-controller="Users" asp-route-id="@u.ID">@u.Name</a> | 
                                @u.UserType</div>
                                    </div>

                    }
                }
            }
        }
    </div>
</div>
<div>
    <a asp-action="UserIndex">Back to List</a>
</div>
