@using BrightLandsWayfinding.Models.Stories
@model BrightLandsWayfinding.Models.Buildings.Building

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
</div>
<div class="card">
    <h3 class="card-header">Stories</h3>
    <div  class="card-body">
        <a asp-action="Create" asp-controller="Stories" class="btn btn-primary">Create New Story..</a>
        <br />
        <br />
        @{
            if (Model.Stories != null)
            {
                foreach (Story s in Model.Stories)
                {
                                        <div class="row">
                                                        <div class="col-6">
                                                            <a asp-controller="Stories" asp-action="Details" asp-route-id="@s.ID">@s.Name</a> 
                                                        </div>
                                                        <div class="col-4">
                                                            <a asp-controller="Stories" asp-action="Edit" asp-route-id="@s.ID">Edit</a>  |
                                                            <a asp-controller="Stories" asp-action="Delete" asp-route-id="@s.ID">Delete</a> 
                                                        </div>
                                        </div> 

                }
            }
        }  
    </div>  
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
